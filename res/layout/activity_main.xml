<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ebstor.robot.MainActivity" >

    <Button
        android:id="@+id/powah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:text="@string/power" />

    <Button
        android:id="@+id/disconnect"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/disconnect"
        android:onClick="disconnect"
        />

    <Button
        android:id="@+id/connect"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/connect"
        android:onClick="connect"
        />

    <TextView
        android:id="@+id/textLog"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/powah"
        android:layout_marginTop="41dp"
        android:layout_toLeftOf="@+id/powah"
        android:ems="10">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/distancebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textLog"
        android:layout_centerVertical="true"
        android:text="@string/travel_distance"
        android:onClick="travelDistance" />
    <EditText android:id="@+id/angle" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:ems="10" android:layout_alignBottom="@+id/distance" android:layout_alignEnd="@+id/textLog"
              android:layout_toEndOf="@+id/powah"/>
    <Button android:id="@+id/angleButton" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/turn_angle" android:onClick="turnAngle"
            android:layout_alignTop="@+id/distancebutton" android:layout_alignEnd="@+id/textLog"/>
    <Button android:id="@+id/makeASqaure" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/make_a_square" android:onClick="makeASquare"
            android:layout_below="@+id/distancebutton" android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sensor" android:layout_below="@+id/disconnect" android:layout_centerHorizontal="true"/>

</RelativeLayout>
